<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header">
                                <h3 class="text-center font-weight-light my-4">Create Account</h3>
                            </div>
                            <div class="card-body">
                                <form method="POST" action="/courses/store">
                                    <div class="form-group">
                                        <label class="small mb-1" for="inputEmailAddress">Tên khóa học</label>
                                        <input class="form-control py-4" id="name" name="name" type="text"
                                            aria-describedby="emailHelp" placeholder="Enter email address" />
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1" for="inputEmailAddress">Mô tả</label>
                                        <textarea class="form-control py-4" id="description" name="description"
                                            aria-describedby="emailHelp" placeholder="Enter email address"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1" for="inputEmailAddress">Video ID</label>
                                        <input class="form-control py-4" id="videoId" name="videoId" type="text"
                                            aria-describedby="emailHelp" placeholder="Enter email address" />
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1" for="inputEmailAddress">Trình độ</label>
                                        <input class="form-control py-4" id="level" name="level" type="text"
                                            aria-describedby="emailHelp" placeholder="Enter email address" />
                                    </div>
                                    <button type="submit"
                                        class="form-group mt-4 mb-0 btn btn-primary btn-block">Create</button>
                                </form>
                            </div>
                            <div class="card-footer text-center">
                                <div class="small"><a href="login.html">Have an account? Go to login</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>